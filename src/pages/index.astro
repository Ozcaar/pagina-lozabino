---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Section1 from "../components/Section1.astro";
import Section2 from "../components/Section2.astro";
import Section3 from "../components/Section3.astro";
import Section4 from "../components/Section4.astro";
import Menu from "../components/Menu.astro";
---

<Layout title="Lozabino">
	<Menu />

	<main id="fullpage">
		<section class="section section1">
			<Section1 />
		</section>

		<section class="section">
			<Section2 />
		</section>

		<section class="section">
			<Section3 />
		</section>

		<section class="section">
			<Section4 />
		</section>
	</main>
</Layout>

<script>
	import fullpage from "fullpage.js";

	// Inicializar fullpage
	const sections = new fullpage("#fullpage", {
		navigation: true,
		// menu: '#fp-nav',
		anchors: ["section1", "section2", "section3", "section4"],
		// navigationTooltips: ["Inicio", "Nosotros", "Servicios", "Cursos"],
		// showActiveTooltip: true,
		navigationPosition: "left",
		credits: {
			enabled: false,
			label: "",
			position: "right",
		},
	});
</script>

<style>
	*,
	*::after,
	*::before {
		box-sizing: border-box;
	}

	#fullpage {
		width: calc(100vw - 66px);
	}

	.section1 {
		/* background-image: url("./images/principal.jpg"); */
